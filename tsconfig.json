{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/main/node/core/*"],
      "@errors/*": ["src/main/node/core/domain/errors/*"],
      "@models/*": ["src/main/node/core/domain/models/*"],
      "@utilities/*": ["src/main/node/core/domain/utils/*"],
      "@ports/*": ["src/main/node/core/ports/*"],
      "@usecases/*": ["src/main/node/core/usecases/*"],
      "@infra/*": ["src/main/node/infrastructure/*"],
      "@controllers/*": ["src/main/node/infrastructure/primary/controllers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
